{
  "compilerOptions": {
    "target": "es6",                    
    "module": "commonjs",                
    "esModuleInterop": true,          
    "experimentalDecorators": true,  
    "emitDecoratorMetadata": true,     
    "moduleResolution": "node",     
    "outDir": "./dist",                 
    "baseUrl": "./",                    
    "paths": {
      "*": ["node_modules/*", "src/types/*"] 
    },
  },
  "include": ["src/**/*"],               
  "exclude": ["node_modules"]           
}
